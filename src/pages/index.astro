---
import DocsLayout from "../layouts/DocsLayout.astro";
---

<DocsLayout title="Presentación del Proyecto" currentPath="/">
  <!-- Hero Section con Logos -->
  <section class="relative py-12 flex flex-col items-center text-center">
    <div
      class="flex flex-wrap justify-center items-center gap-12 mb-12 animate-fade-in"
    >
      <div
        class="bg-white p-6 rounded-2xl shadow-xl hover:scale-105 transition-transform duration-300 flex items-center justify-center w-48 h-48"
      >
        <img
          src="/data/Ingenieria-Admistracion2025/Ingenieria-Admistracion2025/upeulogo.png"
          alt="Logo UPeU"
          class="w-full h-auto object-contain max-h-36"
        />
      </div>
      <div
        class="h-24 w-1 bg-gray-300 dark:bg-gray-600 hidden md:block rounded-full"
      >
      </div>
      <div
        class="bg-white p-6 rounded-2xl shadow-xl hover:scale-105 transition-transform duration-300 flex items-center justify-center w-48 h-48"
      >
        <img
          src="/data/Ingenieria-Admistracion2025/Ingenieria-Admistracion2025/logo.png"
          alt="Logo Incamotors"
          class="w-full h-auto object-contain max-h-36"
        />
      </div>
    </div>

    <h1
      class="text-5xl md:text-6xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-primary-azul to-accent-cyan mb-4 animate-slide-up"
    >
      Automotriz Incamotors S.A.C.
    </h1>

    <div
      class="inline-block px-6 py-2 rounded-full bg-secondary-gold/10 border border-secondary-gold/20 mb-8 animate-slide-up animation-delay-200"
    >
      <span
        class="text-secondary-gold font-semibold tracking-wide uppercase text-sm"
      >
        Caso de Estudio - Análisis Organizacional
      </span>
    </div>

    <p
      class="text-xl text-text-secundario max-w-3xl mx-auto leading-relaxed animate-slide-up animation-delay-300"
    >
      Análisis integral de la gestión estratégica, estructura organizacional y
      posicionamiento de mercado de la empresa líder automotriz en el sur del
      Perú.
    </p>
  </section>

  <!-- Información Académica -->
  <section
    class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12 animate-fade-in animation-delay-500"
  >
    <!-- Tarjeta del Curso -->
    <div
      class="content-card group hover:border-secondary-gold transition-colors duration-300"
    >
      <div class="flex items-center gap-4 mb-4">
        <div class="p-3 rounded-lg bg-secondary-gold/20 text-secondary-gold">
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path></svg
          >
        </div>
        <div>
          <h3 class="text-lg font-bold text-text-principal">Curso</h3>
          <p class="text-secondary-gold font-medium">
            Ingeniería Administrativa
          </p>
        </div>
      </div>
      <div class="border-t border-secondary-gold/20 pt-4">
        <p
          class="text-sm text-text-muted uppercase tracking-wider font-semibold mb-2"
        >
          Docente
        </p>
        <p class="text-text-secundario font-medium">
          Mg. Nancy Esther Casildo Bedón
        </p>
      </div>
    </div>

    <!-- Tarjeta de Ubicación -->
    <div
      class="content-card group hover:border-secondary-gold transition-colors duration-300"
    >
      <div class="flex items-center gap-4 mb-4">
        <div class="p-3 rounded-lg bg-secondary-gold/20 text-secondary-gold">
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
          >
        </div>
        <div>
          <h3 class="text-lg font-bold text-text-principal">Ubicación y Año</h3>
          <p class="text-secondary-gold font-medium">Juliaca - Perú</p>
        </div>
      </div>
      <div class="border-t border-secondary-gold/20 pt-4">
        <p
          class="text-sm text-text-muted uppercase tracking-wider font-semibold mb-2"
        >
          Periodo Académico
        </p>
        <p class="text-text-secundario font-medium">2025</p>
      </div>
    </div>
  </section>

  <!-- Equipo de Responsables -->
  <section class="mt-16 animate-fade-in animation-delay-700">
    <h2
      class="text-3xl font-bold text-center mb-10 flex items-center justify-center gap-3"
    >
      <svg
        class="w-8 h-8 text-secondary-gold"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
        ></path></svg
      >
      Equipo Responsable
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        [
          "Mayta Arotaype Wilbert Alex",
          "Bustinza Inofuente Claudio",
          "Condo Huamani Jose Miguel",
          "Ascuña Mamani Harry Jack",
          "Grimaldo Arredondo Martinez",
        ].map((member, index) => (
          <div class="bg-white dark:bg-docs-surface p-6 rounded-xl shadow-sm border-2 border-secondary-gold/30 hover:shadow-lg hover:border-secondary-gold transition-all duration-300 flex items-center gap-4 group">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-secondary-gold to-yellow-600 flex items-center justify-center text-white font-bold text-lg shadow-lg group-hover:scale-110 transition-transform">
              {member.charAt(0)}
            </div>
            <div>
              <p class="font-semibold text-gray-900 dark:text-text-principal group-hover:text-secondary-gold transition-colors">
                {member}
              </p>
              <p class="text-xs text-gray-500 dark:text-text-muted">
                Estudiante de Ingeniería
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Call to Action -->
  <div class="mt-20 text-center animate-fade-in animation-delay-1000">
    <a
      href="/capitulo-1"
      class="inline-flex items-center gap-3 px-8 py-4 bg-secondary-gold text-white text-lg font-semibold rounded-full hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border-2 border-yellow-400/50 dark:border-yellow-400/50 shadow-lg"
      style="text-shadow: 0 1px 2px rgba(0,0,0,0.2);"
    >
      Comenzar Lectura
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        ><path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg
      >
    </a>
  </div>
</DocsLayout>

<style>
  /* Custom Animations */
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slide-up 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }
  .animation-delay-300 {
    animation-delay: 0.3s;
  }
  .animation-delay-500 {
    animation-delay: 0.5s;
  }
  .animation-delay-700 {
    animation-delay: 0.7s;
  }
  .animation-delay-1000 {
    animation-delay: 1s;
  }
</style>
